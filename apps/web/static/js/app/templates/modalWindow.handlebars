<div class="bbm-modal__topbar">
    <h3 class="bbm-modal__title">{{person}}</h3>
</div>
<div class="bbm-modal__section">
    {{#if mapId}}
    <div id="treasure">
        <h4>Select your Item:</h4>
        <input type="radio" name="item" data-id="1">Shotgun<br>
        <input type="radio" name="item" data-id="2">Knife<br>
        <input type="radio" name="item" data-id="3">Machine Gun<br>
    </div>
    {{else}}
    <div id="transfer">
        <h4>Destination Map:</h4>
        <select id="mapList" required>
            <option>--Select a map--</option>
        {{#each maps}}
            {{#with attributes}}
                <option id="{{title}}" data-id="{{id}}">{{title}}</option>
            {{/with}}
        {{/each}}
        </select>
        <p>New X Coordinate <input type="text" id="d_x" class="" required></p>
        <p>New Y Coordinate <input type="text" id="d_y" class="" required></p>
    </div>
    {{/if}}
</div>
<div class="bbm-modal__bottombar">
    <button id="submitEvent">Ok</button>
    <a href="#" class="bbm-button">Close</a>
</div>
